%html
  %head
    %title Blogr
    %link{:rel=>'stylesheet', :type=>'text/css', :href=>'/css', :media=>'screen,tv,projection'}
  %body
    #wrap
      #header
        %a{:href=>'/'} home
        \|
        - if @logged_in
          %a{:href=>'/entry/new'} new post
          \|
          %a{:href=>'/logout'} logout
        - else
          %a{:href=>'/login'} login
      #content
        = yield
